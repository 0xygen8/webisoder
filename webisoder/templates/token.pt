<html metal:use-macro="load: base_auth.pt">

<script metal:fill-slot="js" type="text/javascript" src="${request.static_url('webisoder:static/js/profile-token.js')}"></script>

<ul metal:fill-slot="navitems" class="nav navbar-nav">
	<li><a href="${request.route_url('shows')}">Shows</a></li>
	<li><a href="${request.route_url('episodes')}">Episodes</a></li>
	<li class="dropdown active">
		<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Feeds <span class="caret"></span></a>
		<ul class="dropdown-menu">
			<li><a href="${request.route_url('settings_feed')}">Feed settings</a></li>
			<li><a href="${request.route_url('settings_token')}">Access token</a></li>
		</ul>
	</li>
</ul>

<div metal:fill-slot="main" class="container">
	<div class="page-header">
		<h1>Access token</h1>
	</div>

	<form method="post" action="${request.route_url('settings_token')}" id="resetTokenForm" class="form-horizontal">
		<input type="hidden" name="csrf_token" value="${request.session.get_csrf_token()}" />
		<div class="form-group">
			<label class="col-sm-2 control-label" for="inputToken">Your current token</label>
			<div class="col-sm-10">
				<input type="text" name="token" class="form-control" id="inputToken" value="${user.token}" readonly />
				<span class="help-block">The access token is required to access your feed and your calendar.</span>
			</div>
		</div>
	 	<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<p><strong>Warning: </strong>If you reset it all your previous feed, calendar and bookmark links become invalid.</p>
				<button type="submit" class="btn btn-danger">Reset token</button>
			</div>
		</div>
	</form>
</div>

</html>
